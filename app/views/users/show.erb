<!-- This page displays a user's profile page and their tweets -->
<div class='container'>
  <p><h1><%= @user.first_name + " " + @user.last_name%></h1></p>
  <p><%= @user.email %></p>
  <p><%= @user.username %></p>
  <% if session[:id] == @user.id %>
    <p><a href="/tweets/new">Create New Tweet</a></p>
    <p><form action="/users/<%= @user.id %>/followers" method="get">
      <input type="submit" value="My Followers">
    </form>
    <form action="/sessions" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Logout">
    </form></p>
  <% end %>
</div>
<div class="container">
  <p><h2>My Tweets</h2></p>
  <% @tweets.each do |tweet| %>
    <p><%= tweet.body %>
      -posted at <%= tweet.created_at.strftime("%l:%M %a %m/%y") %></p>
    <% if session[:id] == @user.id %>
      <p><form action="/tweets/<%= tweet.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Tweet">
      </form></p>
    <% end %>
  <% end %>
</div>
<a href="/users">Show me all the Users</a>
